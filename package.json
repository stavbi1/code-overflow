{
	"name": "code-overflow",
	"displayName": "code-overflow",
	"description": "A vs code extension for searching and integrating with stack overflow",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:code-overflow.search-stackoverflow"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "code-overflow.search-stackoverflow",
				"title": "search stackoverflow"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "code-overflow.search-stackoverflow",
					"group": "editor"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "code-overflow",
					"title": "code overflow",
					"icon": "media/code-overflow.svg"
				}
			]
		},
		"views": {
			"code-overflow": [
				{
					"id": "questions",
					"name": "questions"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "questions",
				"contents": "No question found.\n[Search Stackoverflow](command:code-overflow.search-stackoverflow)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"ts-loader": "^9.2.5",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0",
		"@vscode/test-electron": "^1.6.2"
	},
	"dependencies": {
		"axios": "^0.24.0",
		"open": "^8.4.0"
	}
}
