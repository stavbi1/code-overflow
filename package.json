{
	"name": "code-overflow",
	"displayName": "code-overflow",
	"description": "A vs code extension for searching and integrating with stack overflow",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:code-overflow.search-stackoverflow",
		"onView:questions"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "code-overflow.search-stackoverflow",
				"title": "search stackoverflow"
			},
			{
				"command": "code-overflow.search-stackoverflow-selected",
				"title": "search stackoverflow"
			},
			{
				"command": "code-overflow.search-stackoverflow-args",
				"title": "search stackoverflow"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "code-overflow.search-stackoverflow-selected",
					"group": "editor"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "code-overflow",
					"title": "code overflow",
					"icon": "media/code-overflow.svg"
				}
			]
		},
		"views": {
			"code-overflow": [
				{
					"id": "questions",
					"name": "questions",
					"type": "webview"
				}
			]
		},
		"configuration": [
			{
				"id": "searchConfiguration",
				"title": "Search configuration",
				"properties": {
					"conf.search.tagged": {
						"type": "string",
						"description": "Search tag",
						"scope": "window"
					},
					"conf.search.sort": {
						"type": "string",
						"description": "Sort by",
						"scope": "window",
						"enum": [
							"activity",
							"votes",
							"creation",
							"relevance"
						],
						"default": "relevance"
					},
					"conf.search.order": {
						"type": "string",
						"description": "Sorting order",
						"scope": "window",
						"enum": [
							"desc",
							"asc"
						],
						"default": "desc"
					},
					"conf.search.autoTag": {
						"type": "boolean",
						"description": "Detect language by the file extension",
						"default": false
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "rollup -c && webpack --mode production",
		"watch": "concurrently \"rollup -c -w\" \"webpack --mode development --watch\"",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^8.3.0",
		"@tsconfig/svelte": "^1.0.0",
		"@types/glob": "^7.1.4",
		"@types/langmap": "^0.0.1",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"concurrently": "^5.3.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.2.0",
		"rollup": "^2.3.4",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-polyfill-node": "^0.8.0",
		"rollup-plugin-svelte": "^6.0.0",
		"rollup-plugin-terser": "^7.0.0",
		"svelte": "^3.0.0",
		"svelte-check": "^1.0.0",
		"svelte-preprocess": "^4.0.0",
		"ts-loader": "^8.0.11",
		"typescript": "^4.0.2",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	},
	"dependencies": {
		"axios": "^0.24.0",
		"lang-map": "^0.4.0",
		"open": "^8.4.0",
		"unlink": "^0.0.2"
	}
}
